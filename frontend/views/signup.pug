doctype html
html(lang="en")
  head
    title Pepo Stock Exchange
    link(rel="stylesheet", href="/stylesheets/style.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  body
    .header-container
      include _header 
      include _clock
    hr
    .container
      h1 Sign Up
      form(action="/auth/signup", method="POST")
        input(type="text", name="username", id="username", placeholder="Username", required)
        br
        input(type="password", name="password", id="password", placeholder="Password", required)
        br
        if isProduction
          input(type="password" name="passcode", placeholder="Passcode" required)
          if error == 'Incorrect passcode'
            p.error-message Incorrect passcode
        if error == 'Username is already taken'
          p.error-message Username is already taken
        if error == 'Username or Password cannot contain spaces'
          p.error-message Username or Password cannot contain spaces
        button(type="submit") Sign Up

      h1 Sign In 
      form(action='/auth/signin', method='get')
        button(type='submit') Sign In
