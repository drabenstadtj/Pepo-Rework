extends layout

block content
  .page
    h1.title Sign In
    form.auth-form(action='/auth/signin', method='post', onsubmit='return trimInput()')
      label #[strong Username]
      input(type='text', id='signin-username', name='username', placeholder='Username', required)
      label #[strong Password]
      input(type='password', id='signin-password', name='password', placeholder='Password', required)
      if error
        .alert.alert-danger
          p #{error}
      button(type='submit') Sign In

    h1.title Sign Up 
    form.form(action='/auth/signup', method='get')
      button(type='submit') Sign Up
      
  script.
    function trimInput() {
      var username = document.getElementById('signin-username');
      var password = document.getElementById('signin-password');
      if (username && password) {
        username.value = username.value.trim();
        password.value = password.value.trim();
      }
      return true; // Ensure form submission continues
    }
